---
const { title, description } = Astro.props;
---

<section class="mt-24 first-of-type:mt-0 flex-row gap-16 w-full items-start">
  <div class="border-b border-gray-200 pb-5 w-full">
    {
      title && (
        <h2 class="text-lg font-medium leading-6 text-gray-900">{title}</h2>
      )
    }
    {
      description && (
        <p class="mt-2 max-w-4xl text-sm text-gray-500">{description}</p>
      )
    }
  </div>
  <div class="w-full divide-y">
    <slot />
  </div>
</section>
