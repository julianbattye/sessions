---
const { onboarding } = Astro.props;
---

<ul
  role="list"
  class="mt-8 p-8 rounded-xl bg-gray-100 flex flex-col gap-8 justify-start"
>
  <li class="flex gap-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6 text-slate-400"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"
      ></path>
    </svg>

    <div>
      <p class="mt-1 font-semibold text-gray-90 text-sm">
        Early morning workout
      </p>
      <p class="mt-2 text-sm">5th March, 2023</p>
      <p class="text-sm">6:00am - 7:00am</p>
    </div>
  </li>
  {
    onboarding && (
      <li class="flex gap-4 pt-6 border-t">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6 text-slate-400"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
          />
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
          />
        </svg>

        <div>
          <a href="https://goo.gl/maps/JrcgVn76xQPLUKY39">
            <p class="mt-1 font-semibold text-gray-900 text-sm">Fitstop</p>
            <p class="mt-2 text-sm">
              93 Glade Rd
              <br />
              Manchester
              <br />
              M14 2RN
            </p>
            <p class="mt-2 text-sm">0161 445 3578</p>
          </a>
        </div>
      </li>
    )
  }
</ul>
