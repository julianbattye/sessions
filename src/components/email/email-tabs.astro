---
const { activeTab } = Astro.props;

const Default =
  "text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-sm rounded-md";
const Current =
  "bg-gray-100 text-gray-700 px-3 py-2 font-medium text-sm rounded-md";
---

<nav class="flex w-full px-4 pt-4 space-x-4" aria-label="Tabs">
  <a
    href="/email-booking-onboarding"
    class={activeTab === "A" ? Current : Default}>Onboarding</a
  >

  <a
    href="/email-booking-onboarding-alt"
    class={activeTab === "B" ? Current : Default}>Alt content</a
  >

  <a
    href="/email-booking-normal"
    class={activeTab === "C" ? Current : Default}
    aria-current="page">Normal</a
  >
</nav>
