---
const { activeTab } = Astro.props;

const Default =
  "text-gray-500 hover:text-gray-700 px-3 py-1 font-medium text-xs rounded-md";
const Current =
  "bg-slate-200 text-gray-900 px-3 py-1 font-medium text-xs rounded-md";
---

<div
  class="flex px-4 w-full items-center justify-center border-b bg-slate-50 gap-4"
>
  <a href="/sessions/"
    ><img class="h-8 w-8" src="/sessions/logo-sessions.svg" /></a
  >
  <nav class="py-4 w-full flex flex-wrap" aria-label="Tabs">
    <a
      href="/sessions/email/booking-onboarding"
      class={activeTab === "A" ? Current : Default}
    >
      Onboarding
    </a>
    <a
      href="/sessions/email/booking-onboarding-alt"
      class={activeTab === "B" ? Current : Default}
    >
      Alt content
    </a>
    <a
      href="/sessions/email/booking-normal"
      class={activeTab === "C" ? Current : Default}
      aria-current="page"
    >
      Normal
    </a>
    <a
      href="/sessions/email/booking-reminder"
      class={activeTab === "D" ? Current : Default}
      aria-current="page"
    >
      Reminder
    </a>
    <a
      href="/sessions/email/forgot-password"
      class={activeTab === "E" ? Current : Default}
      aria-current="page"
    >
      Reset password
    </a>
  </nav>
</div>
