---
const { activeTab } = Astro.props;

const Default =
  "text-gray-500 hover:text-gray-700 px-3 py-1 font-medium text-sm rounded-md";
const Current =
  "bg-gray-100 text-gray-700 px-3 py-1 font-medium text-sm rounded-md";
---

<nav class="flex p-4 w-full max-w-lg border-b" aria-label="Tabs">
  <a
    href="/sessions/email/booking-onboarding"
    class={activeTab === "A" ? Current : Default}
  >
    Onboarding
  </a>
  <a
    href="/sessions/email/booking-onboarding-alt"
    class={activeTab === "B" ? Current : Default}
  >
    Alt content
  </a>
  <a
    href="/sessions/email/booking-normal"
    class={activeTab === "C" ? Current : Default}
    aria-current="page"
  >
    Normal
  </a>
</nav>
