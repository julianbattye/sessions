---
import Sidebar from "../components/Sidebar.astro";
import Header from "../components/Header.astro";
const { title, navIndicator, maximize } = Astro.props;
---

<html class="h-full" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Manage - {title}</title>
  </head>
  <body class="flex h-full">
    <Sidebar navIndicator={navIndicator} />
    <div
      class={maximize === true
        ? "w-full relative pt-14 h-full flex"
        : "w-full relative pt-14 px-4 sm:px-6 lg:px-8"}
    >
      <Header />
      <main
        class={maximize === true
          ? "w-full flex min-h-full justify-center"
          : "w-full flex min-h-full justify-center py-16"}
      >
        <article class={maximize === true ? "w-full" : "w-full max-w-5xl"}>
          <slot />
        </article>
      </main>
    </div>
  </body>
</html>
