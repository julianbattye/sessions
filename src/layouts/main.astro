---
const { title, clientIcon } = Astro.props;
---

<!DOCTYPE html>
<html class="h-full" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={clientIcon ? "/sessions/logo.svg" : "/sessions/mark-sessions.svg"}
    />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <title>{title}</title>
  </head>
  <body class="flex p-8 flex-col w-full h-full justify-center items-center">
    <slot />
    <!-- Instant page -->
    <script
      src="//instant.page/5.1.1"
      type="module"
      integrity="sha384-MWfCL6g1OTGsbSwfuMHc8+8J2u71/LA8dzlIN3ycajckxuZZmF+DNjdm7O6H3PSq"
    ></script>
  </body>
</html>
