---
import SubjectLine from "../components/email/email-subject-line.astro";
import Tabs from "../components/email/email-tabs.astro";
const { subject, title, activeTab } = Astro.props;
import favicon from "/logo.svg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center">
    <h1>The current URL is: {Astro.url}</h1>
    <h1>The current URL pathname is: {Astro.url.pathname}</h1>
    <h1>The current URL origin is: {Astro.url.origin}</h1>
    <Tabs activeTab={activeTab} />
    <SubjectLine from="FitStop" subject={subject} />
    <div class="px-6 py-8 mb-8 max-w-lg w-full">
      <slot />
    </div>
  </body>
</html>
